#!/usr/bin/env python3
import sys
from fractions import Fraction

def solve(nums):
    if len(nums) == 1:
        if nums[0][0] == 0:
            return nums[0][1]
        else:
            return None

    for i in range(len(nums)):
        for j in range(len(nums)):
            if i == j:
                continue

            rest = []
            for k in range(len(nums)):
                if k != i and k != j:
                    rest.append(nums[k])

            x, ex = nums[i]
            y, ey = nums[j]

            results = []
            results.append((x + y, f"({ex}+{ey})"))
            results.append((x - y, f"({ex}-{ey})"))
            results.append((y - x, f"({ey}-{ex})"))
            results.append((x * y, f"({ex}*{ey})"))

            if y != 0:
                results.append((x / y, f"({ex}/{ey})"))
            if x != 0:
                results.append((y / x, f"({ey}/{ex})"))

            for v, e in results:
                r = solve(rest + [(v, e)])
                if r is not None:
                    return r

    return None


def main():
    s = sys.stdin.read().strip()

    digits = []
    for c in s:
        if c.isdigit():
            digits.append(c)

    if len(digits) != 4:
        print("impossible")
        return

    nums = []
    for d in digits:
        nums.append((Fraction(int(d)), d))

    ans = solve(nums)

    if ans is None:
        print("impossible")
    else:
        print(ans, "= 0")


if __name__ == "__main__":
    main()
